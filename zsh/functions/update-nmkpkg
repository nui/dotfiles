# set -e

if [[ ! -e $1 ]]; then
    echo "Usage: update-nmkpkg ARCHIVE"
    return
fi


if ! tar -tf $1 >/dev/null 2>&1 ; then
    echo "$1 is not valid tar archive"
    return
fi

local archive=${1:a}

local install_path="$NMK_HOME/local"

if [[ ! -e $install_path ]]; then
    mkdir $install_path
fi

pushd -q $install_path
rm -rf *
tar xf $archive
popd -q
# vi: ft=zsh
