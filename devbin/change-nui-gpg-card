#!/bin/zsh

# 47A47347 key (pre 2024)
key_grips=(
    E0FC67E10949942C69DA4F03EFEFF1FE521F7D84
    F5EA1B28531C2F85BC069D80C82393C12DF239D2
    A4E55128EC52D507F2DCD2DF91BA02EA659DE81E
)

# 828CF62A key (new key)
key_grips+=(
    14926E686D606CD78C8E080261ACF1195F8FACFD
    8666B6D335ABC8E3D32192B1A984B86F7DBB5115
    38AABC439873A7A26355C69E69313AD9E531D057
)

key_dir=${GNUPGHOME:-~/.gnupg}/private-keys-v1.d

for k in $key_grips; do
    rm -f $key_dir/$k.key
done

gpg --card-status

